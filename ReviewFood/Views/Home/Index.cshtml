@model ReviewFood.Models.BaiViet_DanhMuc
@{
    ViewBag.Title = "Home Page";
}
<section class="s-featured">
    <div class="row">
        <div class="col-full">

            <div class="featured-slider featured" data-aos="zoom-in">
                @foreach (var item in ViewBag.Featured)
                {
                    <div class="featured__slide">

                        <div class="entry">

                            <div class="entry__background" style="background-image:url('/Assets/Image/@item.HinhAnh');"></div>

                            <div class="entry__content">
                                <span class="entry__category"><a href="/DanhMuc/Index/@item.MaDanhMuc">@item.DanhMuc</a></span>

                                <h1><a href="/BaiViet/Index/@item.MaTinTuc" title="">@item.TieuDe</a></h1>

                                <div class="entry__info">
                                    <ul class="entry__meta">
                                        <li>@item.NgayTao</li>
                                    </ul>
                                </div>
                            </div> <!-- end entry__content -->

                        </div> <!-- end entry -->

                    </div>
                }

            </div> <!-- end featured -->

        </div> <!-- end col-full -->
    </div>
</section>


<section class="s-content">

    <div class="row entries-wrap wide">
        <div class="entries">
            @foreach (var item in ViewBag.TopTen)
            {
                <article class="col-block">

                    <div class="item-entry" data-aos="zoom-in">
                        <div class="item-entry__thumb">
                            <a href="/BaiViet/Index/@item.MaTinTuc" class="item-entry__thumb-link">
                                <img src="/Assets/Image/@item.HinhAnh"
                                     srcset="/Assets/Image/@item.HinhAnh" alt="thubnail">
                            </a>
                        </div>

                        <div class="item-entry__text">
                            <div class="item-entry__cat">
                                <a href="/DanhMuc/Index/@item.MaDanhMuc">@item.DanhMuc</a>
                            </div>

                            <h1 class="item-entry__title">
                                <a href="/BaiViet/Index/@item.MaTinTuc">@item.TieuDe</a>
                            </h1>

                            <div class="item-entry__date">
                                <a href="/BaiViet/Index/@item.MaTinTuc">@item.NgayTao</a>
                            </div>
                        </div>
                    </div> <!-- item-entry -->

                </article> <!-- end article -->
            }

        </div> <!-- end entries -->
    </div> <!-- end entries-wrap -->

</section> <!-- end s-content -->
<footer class="s-footer">

    <div class="s-footer__main">
        <div class="row">

            <div class="col-six tab-full s-footer__about">

                <h4>Về Trang web Review </h4>

                <p>
                    Trang web Review Đồ Ăn Hàng Đầu Việt Nam
                </p>

            </div> <!-- end s-footer__about -->
        </div>
    </div> <!-- end s-footer__main -->

    <div class="s-footer__bottom">
        <div class="row">

            <div class="col-six">
                <ul class="footer-social">
                    <li>
                        <a href="#0"><i class="fab fa-facebook"></i></a>
                    </li>
                    <li>
                        <a href="#0"><i class="fab fa-twitter"></i></a>
                    </li>
                    <li>
                        <a href="#0"><i class="fab fa-instagram"></i></a>
                    </li>
                    <li>
                        <a href="#0"><i class="fab fa-youtube"></i></a>
                    </li>
                    <li>
                        <a href="#0"><i class="fab fa-pinterest"></i></a>
                    </li>
                </ul>
            </div>

            <div class="col-six">
                <div class="s-footer__copyright">
